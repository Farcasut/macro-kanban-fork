################################################
################ DISPLAY MACROS ################
################################################

#### MACRO displayCardTitle
## @doctitle[String] Title of the task
## @doclink[String] Link (XWiki Syntax compliant) to access the task
##
## Display the title of the task
#macro(displayCardTitle $doctitle $docname)
  #if(!$doctitle.trim().isEmpty())
    (% class="kanban-card-title" %)
    (((
      [[${doctitle}&gt;&gt;${docname}]]
    )))
  #end
#end
################################################
################### DISPLAY ####################
################################################
#set($docname = $xcontext.macro.params.document)
#set($titlefield = $xcontext.macro.params.title)
#set($columns = $xcontext.macro.params.columns)
#set($cssClasses = $!xcontext.macro.params.cssClasses)
#set($cssStyles = $!xcontext.macro.params.cssStyles)
#set($currentdoc = $xwiki.getDocument($docname))
#if($titlefield=="" || $titlefield=="title")
 #set($doctitle = $currentdoc.displayTitle)
#else
 #set($doctitle = $currentdoc.display($titlefield, "view"))
#end
#set($discard = $xwiki.ssx.use('Macros.KanbanCardMacro'))
(% class="kanban-card well $cssClasses" style="$cssStyles" %)
(((  
  #displayCardTitle($doctitle, $currentdoc.fullName)
  #if($columns &amp;&amp; $columns!="")
(((
  #foreach($col in $columns.split(","))
  (% class="kanban-card-subfield kanban-card-${col}" %)
  (((
   (% class="kanban-card-subfield-label" %)$currentdoc.displayPrettyName($col)(%%) (% class="kanban-card-subfield-value" %)$currentdoc.display($col,"view")(% %)
  )))
  #end
)))
  #end
)))
{{/velocity}}
