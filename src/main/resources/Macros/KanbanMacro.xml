      <code>require(["jquery", "$services.webjars.url('jquery-ui', 'jquery-ui.js')"], function(jQuery) {
   jQuery(".kanban-sortable" ).sortable({ connectWith: ".kanban-sortable",  placeholder: "kanban-placeholder kanban-card-draggable" });
   jQuery(".kanban-sortable" ).disableSelection();
   jQuery(".kanban-droppable" ).droppable({
      drop: function( event, ui ) {
        var docname = ui.draggable.attr("docname");
        var fieldname = ui.draggable.attr("fieldname");
        var classname = ui.draggable.attr("classname");
        var objnumber = ui.draggable.attr("objectnumber");
        var newcategory = jQuery(event.target).attr("category");
        var currentdoc = new XWiki.Document(XWiki.Model.resolve(docname, XWiki.EntityType.DOCUMENT));
        var restURL = currentdoc.getRestURL() + "/objects/" + classname + "/0/properties/" + fieldname + "/";
        var data = '&lt;?xml version="1.0" encoding="UTF-8" standalone="yes"?&gt;&lt;property xmlns="http://www.xwiki.org" name="defaultEditMode" type="String"&gt;&lt;value&gt;'
              + newcategory + '&lt;/value&gt;&lt;/property&gt;'
        jQuery.ajax({
           url: restURL,
           type: 'PUT',
           data: data,
           contentType: "application/xml",
           success: function(result) {
               #set($success = $escapetool.json($services.localization.render("kanban.update.success")))
               new XWiki.widgets.Notification('$success', 'info', '20');
           },
           error: function(result) {
               #set($error = $escapetool.json($services.localization.render("kanban.update.error")))
               new XWiki.widgets.Notification('$error', 'error', '20');
           }
        });
      }
    });
});</code>
