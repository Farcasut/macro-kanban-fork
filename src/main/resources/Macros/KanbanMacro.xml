#set($discard = $xwiki.jsx.use('Macros.KanbanMacro'))
#set($discard = $xwiki.ssx.use('Macros.KanbanMacro'))
## Display the tasks with column for each category
#macro(displayCategories $categories $docLists)
  (% class="kanban-board row" %)
  (((
    #foreach($categoryValue in $categories)
     #set($fakedoc = $xwiki.getDocument("XWiki.FakeDocument"))
     #set($fakeobj = $fakedoc.getObject($className, true))
     #set($discard = $fakedoc.use($fakeobj))
     #set($discard = $fakedoc.set($category, $categoryValue))
     #set($scategoryValue = $fakedoc.display($category, "view"))
     (% class="$cssClasses kanban-col-${categoryValue} kanban-droppable" category="${escapetool.xml($categoryValue)}" %)
      (((
        (% class="panel panel-default" %)
        (((
          (% class="panel-heading text-center" %)
          (((
            (% class="panel-title" %)(((${scategoryValue})))
          )))
          
         {{html wiki=true clean="false"}}
          &lt;ul class="panel-body kanban-sortable" category="${escapetool.xml($categoryValue)}"&gt;
            #foreach($docname in $docLists.get($categoryValue))
              &lt;li class= "kanban-card-draggable" docname="${escapetool.xml($docname)}" classname="${escapetool.xml($className)}" fieldname="${escapetool.xml($category)}"&gt;
              {{kanbancard document="${docname}" title="$!{xcontext.macro.params.title}" columns="$!{xcontext.macro.params.columns}" /}}
              &lt;/li&gt;
            #end
          &lt;/ul&gt;
         {{/html}} 
         
        )))
      )))
    #end
  )))
#end
#set($app = $xcontext.macro.params.app)
#set($cssClasses = $xcontext.macro.params.cssClasses)
#set($className = $xcontext.macro.params.className)
#if(!$className || $className=="")
 #set($appDoc = $xwiki.getDocument("${app}.WebHome"))
 #set($className = $appDoc.getValue("class"))
#end
#set($category = $xcontext.macro.params.category)
#set($results = $services.query)
#set($query = "from doc.object(${className}) as obj where doc.fullName not like '%Template'")
#set($xwql = $xcontext.macro.params.xwql)
#if($xwql &amp;&amp; $xwql!="")
 #set($query = "${query} and ${xwql}")
#end
#set($order = $xcontext.macro.params.order)
#if($order &amp;&amp; $order!="")
 #if($order.startsWith("doc"))
  #set($query = "${query} order by ${order}")
 #else
  #set($query = "${query} order by obj.${order}")
 #end
#end
#set($results = $results.xwql($query).setLimit(50))
#set($results = $results.execute())
#set($categoryField = $xwiki.getDocument($className).getxWikiClass().get($category))
#set($categories = $categoryField.getListValues())
